<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    	<title><%= h(yield(:title) || "CAMSDevelopment") %></title>
		<%= stylesheet_link_tag "application", "admin", "style", "style2", "/javascripts/prettyPhoto/css/prettyPhoto" %> 

		<%= javascript_include_tag "jquery" %>
		<%= javascript_include_tag "/prettyPhoto/js/jquery.prettyPhoto", :charset => "utf-8" %>
		<%= javascript_include_tag "/slideshow/js/swfobject/swfobject" %>
		<%= javascript_include_tag "custom" %>
		<%= javascript_include_tag "application" %>
		
		<script type="text/javascript">
				var flashvars = {};
				flashvars.xml = "slideshow/config.xml";
				flashvars.font = "font.swf";
				var attributes = {};
				attributes.wmode = "transparent";
				attributes.id = "slider";
<!-- 			swfobject.embedSWF("slideshow/cu3er.swf", "featured_image", "940", "420", "9", "expressInstall.swf", flashvars, attributes); --> 
		</script>

		<!--[if IE 6]>
			<%= javascript_include_tag "dd_belated_png" %>
			<script>DD_belatedPNG.fix('.ie6fix');</script>
			<style>#footer .box ul li a, #sidebar .box ul a {zoom:1;}</style>
		<![endif]-->

    	<%= yield(:head) %>
  	</head>

	<body id='frontpage'>

		<div class='wrapper'>

			<div id="top">

				<div id="head">

					<h1 class="logo ie6fix"><%= link_to "home", root_path, :title => "" %></h1>

					<div id="nav2">
						<ul>
							<li class="no_bg"><%= link_to "Home", root_path %></li>
							<li><a href="/faq">FAQ</a></li>
							<li><a href="/contact">Contact</a></li>
							<li><%= link_to "Administration", posts_path %></li>
						</ul>
					</div> <!-- ends nav2 -->


<!-- Primary Nav -->
					<%= semantic_menu do |root|
					  	root.add "<strong>Home</strong><span>introduction</span>", root_path
						root.add "<strong>About</strong><span>who we are</span>", page_path('about'), :class => 'xyz' do |about|
					    	about.add "History",     	page_path('history')
					    	about.add "Leadership",  	page_path('leadership')
					    	about.add "Partners",  		page_path('partners')					  	
					    	about.add "Media",  		page_path('media')
					    	about.add "Citizenship",  	page_path('citizenship')					
						end
						root.add "<strong>Portfolio</strong><span>what we do</span>", page_path('portfolio'), :class => 'portfolio' do |portfolio|
					    	portfolio.add "Commercial", 	page_path('commercial')
					    	portfolio.add "Institutional",	page_path('institutional')
					    	portfolio.add "Residential",  	page_path('residential')
					    	portfolio.add "Hotel/Resort",  	page_path('hotelresort')
					    	portfolio.add "Urban Renewal",  page_path('urbanrenewal')
					    	portfolio.add "Civil", 			page_path('civil')
						end
						root.add "<strong>Financing</strong><span>how we pay for it</span>", page_path('financing')		
						root.add "<strong>Contact</strong><span>get in touch</span>", contact_path
					end %>

		</div>	<!-- end #head -->
	
      	<%- flash.each do |name, msg| -%>
        	<%= content_tag :div, msg, :id => "flash_#{name}" %>
      	<%- end -%>
      
      	<%- if show_title? -%>
        	<h1><%=h yield(:title) %></h1>
      	<%- end -%>
      
    	<%= yield %>

	</div><!-- end #top -->
	
</div><!-- end #wrapper -->


<div class='wrapper' id='footerwrap'>

	<div id='footer'>
	
			<p>All content Copyright &copy; 2010 CAMSDevelopment, Inc</p>
			
	</div>
	
	
	</div><!--end footer-->
	
</div>

</body>
</html>